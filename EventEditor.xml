					<EditBox name="CalendarEventTitle" letters="50" historyLines="0" autoFocus="false" inherits="GroupCalendarInputBoxTemplate">
						<Size>
							<AbsDimension x="172" y="20"/>
						</Size>
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="CalendarEventEditorEventTypeMenu" relativePoint="TOPLEFT">
								<Offset>
									<AbsDimension x="6" y="-30"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<FontString inherits="GameFontNormalSmall" text="GroupCalendar_cTitleLabel" justifyH="RIGHT">
									<Anchors>
										<Anchor point="RIGHT" relativePoint="LEFT">
											<Offset>
												<AbsDimension x="-12" y="0"/>
											</Offset>
										</Anchor>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnChar>
								self.EventID, self.EventTemplate = GroupCalendar.AutoCompleteEventTitle(self)
								self.GotChar = true
							</OnChar>
							<OnTextChanged>
								if not self.GotChar then
									self.EventTemplate = nil
								end
								self.GotChar = false
							</OnTextChanged>
							<OnEditFocusGained>
								self.GotChar = false
							</OnEditFocusGained>
							<OnEditFocusLost>
								if GroupCalendar.EventEditor.IsNewEvent and (self.EventID or self.EventTemplate) then
									if self.EventTemplate then
										GroupCalendar.EventEditor:SetEventType(self.EventTemplate.mType)
										GroupCalendar.EventEditor:LoadEventDefaults(self.EventTemplate)
									else
										GroupCalendar.EventEditor:SetEventType(self.EventID)
										GroupCalendar.EventEditor:LoadEventDefaults()
									end
								end
								self:HighlightText(0, 0)
							</OnEditFocusLost>
							<OnEscapePressed>
								self:ClearFocus()
							</OnEscapePressed>
							<OnEnterPressed>
								GroupCalendar.EventEditor:DoneEditing()
							</OnEnterPressed>
						</Scripts>
